.modal#modal-form
	.modal-background.animated.fadeIn
	.modal-card
		header.modal-card-head
			p.modal-card-title Auditoría GRATIS
			button.delete.toggle-off-form
		section.modal-card-body
			.field
				label.label URL
				p.control
					input.input.dest-url(type='text', placeholder='URL')
			.field
				label.label Nombre
				p.control
					input.input(type='text', placeholder='Nombre')
			.field
				label.label Empresa
				p.control
					input.input(type='text', placeholder='Empresa', value='')
			.field
				label.label Correo Electrónico
				p.control.has-icon.has-icon-right
					input.input(type='text', placeholder='Correo Electrónico', value='')
					span.icon.is-small
						i.fa.fa-envelope
			.field
				label.label Teléfono
				p.control.has-icon.has-icon-right
					input.input(type='text', placeholder='Teléfono', value='')
					span.icon.is-small
						i.fa.fa-phone
			.field
				label.label Sugerencias (opcional)
				p.control
					textarea.textarea(placeholder='Escribe una sugerencia...')
		footer.modal-card-foot
			a.button.is-success Enviar
			a.button.toggle-off-form Cancelar