mixin auditoria()
	section#auditoria.hero.is-primary.abs-container
		div.absolute-full
		.hero-body
			.container.has-text-centered
				h2.title Te auditamos tu web GRATIS
				.field.url
					p
						input.input.is-large.from-url(type='url', placeholder='Introduce tu URL')
				.field.toggle-on-form
					p
						a.button.is-success.is-large.is-centered Auditor√≠a GRATIS