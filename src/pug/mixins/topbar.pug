mixin topbar()
  .hero-head
    nav.nav
      .nav-left
        span.nav-toggle#menu-toggle
          span
          span
          span
        .nav-logo
          a.nav-item.is-brand(href="/")
            img(src='/img/braun_marketing_logo2.png', alt='Braun Marketing & Consulting')
      .nav-right.social-group
        .field.is-horizontal.nav-item.nav-form
          a.nav-item.social
            span.icon
              i.fa.fa-facebook
          a.nav-item.social
            span.icon
              i.fa.fa-twitter
          a.nav-item.social.phone
            span.icon
              i.fa.fa-phone
            span 999 888 777
          .field-body

            .field.url.is-hidden-mobile
              p.control.is-expanded
                input.input.from-url(type='url', placeholder='Introduce tu URL')
            .field.toggle-on-form
              p.control
                a.button.is-info Te auditamos GRATIS