extends /partials/html-layout
include /mixins/testimonios
include /mixins/auditoria
include /mixins/prensa
include /mixins/categorias
include /mixins/mobile-menu
include /mixins/header
include /mixins/nosotros

block body
	include _variables
	+mobile-menu()
	+header("Consultora estratégica de negocio y Agencia de Marketing online especializada en el Sector Sanitario", 'header-inicio')
	#content-wrapper
		section.hero.is-light
			.hero-body
				.container
					h2.title ¿Debo invertir en una consultora estratégica y agencia de marketing online especializada en el sector sanitario?
					.tile.is-ancestor
						.tile.is-parent.is-vertical
							.tile.card
								.card-content
									p.title.is-4 60% de los internautas realizan búsquedas Sanitarias
						.tile.is-parent.is-vertical
							.tile.card
								.card-content
									p.title.is-4 1,2 millones de búsquedas mensuales relacionadas con salud
						.tile.is-parent.is-vertical
							.tile.card
								.card-content
									p.title.is-4 90% busca su dolencia en internet
						.tile.is-parent.is-vertical
							.tile.card
								.card-content
									p.title.is-4 ¿Sabes lo mejor de todo?
									p.title.is-4 El 75% no pasa de la primera página de Google

		+categorias(
			"Nuestras acciones de Marketing online y consultoría harán que tus clientes te encuentren entre los primeros resultados",
			"¿Crees que hoy en día con tus conocimientos y experiencia es suficiente?",
			"Dinos qué profesional eres y te diremos cómo ayudarte"
		)

		block content
		+prensa()
		+auditoria()
		section.hero#text-left-img-right
			.hero-body
				.columns.is-gapless
					.column
						.container-left
							h2.title La transparencia y la consistencia constituyen dos valores que guiarán nuestros procesos de Consultoría y Marketing Online
					.column
						img(src="/img/glass-ball.jpg")
		+testimonios()

		+nosotros()
		include /partials/footer

	include /partials/form
